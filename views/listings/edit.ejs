<% layout("/layouts/boilerplate") %>
<body>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
    <h2>Edit Details</h2>
    <form method="post" action="/listings/<%=dataId._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value=<%=dataId.title%> class="form-control" required>
            <div class="valid-feedback">Title looks Good</div>
        </div>
       
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" cols="20" rows="5" class="form-control" required><%=dataId.description%></textarea>
            <div class="invalid-feedback">Please A Short Description</div>
        </div>


        <div class="mb-3">
           Original Listing Image <br>
           <img src="<%=originalUrl%>" alt="#" class="img-size">
        </div>
       

        <div class="mb-3">
            <label for="url" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image][url]" class="form-control" required> 
            
        </div>


        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" value=<%=dataId.price%> class="form-control" required>
            <div class="invalid-feedback">Please Enter Some Price</div>
        </div>
       
        <div class="row">
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" value=<%=dataId.location%> class="form-control" required>
                <div class="invalid-feedback">Please A Valid Location</div>
                </div>
               
                <div class="mb-3 col-md-4">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value=<%=dataId.country%> class="form-control" required>
                    <div class="invalid-feedback">Please A Valid Country Name</div>
                </div>
        </div>

        <br>
        <button class="btn btn-dark add-btn">Edit</button>
        <br><br>
    </form>
</div>
</div>
</body>
</html>